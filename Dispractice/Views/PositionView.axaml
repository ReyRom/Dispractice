<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
			 xmlns:vmd="using:Dispractice.ViewModels.Design"
			 xmlns:vm="using:Dispractice.ViewModels"
			 xmlns:m="using:Dispractice.Models"
			 xmlns:v="using:Dispractice.Views"
			 xmlns:e="using:Dispractice.Extensions"
			 xmlns:a="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             x:Class="Dispractice.Views.PositionView"
			 x:DataType="vm:PositionViewModel">
	<Design.DataContext>
		<vmd:PositionViewModelDesign/>
	</Design.DataContext>
	<Grid RowDefinitions="*, Auto" Margin="20">
		<StackPanel Grid.Row="0">
			<TextBox a:TextFieldAssist.Label="Подразделение"
						 UseFloatingWatermark="True"
						 Theme="{StaticResource OutlineTextBox}"
						 Classes="outline densed"
						 Text="{Binding Position.MilitaryUnit.Name}" IsEnabled="False"/>
		
			<TextBox a:TextFieldAssist.Label="Должность"
						 UseFloatingWatermark="True"
						 Theme="{StaticResource OutlineTextBox}"
						 Classes="outline densed"
						 Text="{Binding Position.Name}" />
		
		</StackPanel>
		<StackPanel Orientation="Horizontal" Spacing="10" Grid.Row="1" HorizontalAlignment="Right">
			<Button Content="Ок" Command="{Binding OkCommand}" Width="100"/>
		</StackPanel>
	</Grid>
	
	
</UserControl>
