<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
		<Button Classes="Icon Edit"/>
    </Border>
  </Design.PreviewWith>
	<Styles.Resources>
		<FontFamily x:Key="MaterialIcons">avares://Dispractice/Assets#Material Symbols Outlined</FontFamily>
	</Styles.Resources>
	<Style Selector="Button.Icon">
		<Setter Property="FontFamily" Value="{StaticResource MaterialIcons}" />
		<Setter Property="FontSize" Value="25" />
		<Setter Property="FontWeight" Value="Bold" />
	</Style>

	<Style Selector="Button.Edit">
		<Setter Property="Content" Value="&#xf88d;" />
	</Style>
</Styles>
